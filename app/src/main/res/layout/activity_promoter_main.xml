<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAnimationGradientBase"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_sign_padding_horizontal"
    android:paddingRight="@dimen/activity_sign_padding_horizontal">

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_circular_transparent"
        android:padding="36dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_wine" />

    <app.media.opp.partytonight.presentation.app.view.TextViewSignHint
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:text="My events"
        android:textColor="@color/colorTextViewTitle"
        android:textSize="20sp" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        android:background="@drawable/button_circular_transparent"
        android:padding="36dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_plus" />

    <app.media.opp.partytonight.presentation.app.view.TextViewSignHint
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:text="New event"
        android:textColor="@color/colorTextViewTitle"
        android:textSize="20sp" />

</LinearLayout>