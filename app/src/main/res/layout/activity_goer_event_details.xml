<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/background_blur" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_centered_sugar_plums" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="@dimen/activity_sign_padding_horizontal"
        android:paddingRight="@dimen/activity_sign_padding_horizontal"
        android:paddingTop="16dp">

        <com.daimajia.slider.library.SliderLayout
            android:id="@+id/slThumbnail"
            android:layout_width="match_parent"
            android:layout_height="250dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <app.media.opp.partytonight.presentation.app.view.TextViewAguda
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="About venue" />

            <TextView
                android:id="@+id/tvAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_curved_translucent"
            android:drawableLeft="@mipmap/ic_tickets"
            android:gravity="center"
            android:text="10:00 PM 25.07.16"
            android:textColor="@color/colorTextHeader2" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_curved_translucent"
            android:drawableLeft="@mipmap/ic_tickets"
            android:gravity="center"
            android:text="10:00 PM 25.07.16"
            android:textColor="@color/colorTextHeader2" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3">


        </GridLayout>
    </LinearLayout>

</RelativeLayout>