<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_promoter_sign_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAnimationGradientBase"
    android:orientation="vertical"
    tools:context="app.media.opp.partytonight.presentation.activities.PromoterSignInActivity">

    <app.media.opp.partytonight.presentation.app.view.TextViewHeader2
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="18dp"
        android:text="Promoter"
        android:textSize="36dp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <app.media.opp.partytonight.presentation.app.view.EditTextCurvedTranslucentWithIcon
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:drawableLeft="@mipmap/ic_account"
            android:drawablePadding="12dp"
            android:drawableStart="@mipmap/ic_account"
            android:hint="@string/eMail"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:textColor="@color/colorTextSignIn"
            android:textColorHint="@color/colorTextSignIn"
            android:textCursorDrawable="@null" />

        <app.media.opp.partytonight.presentation.app.view.EditTextCurvedTranslucentWithIcon
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:drawableLeft="@mipmap/ic_password"
            android:drawablePadding="12dp"
            android:drawableStart="@mipmap/ic_password"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:textColor="@color/colorTextSignIn"
            android:textColorHint="@color/colorTextSignIn"
            android:textCursorDrawable="@null" />

        <app.media.opp.partytonight.presentation.app.view.ButtonCurvedTranslucent
            android:id="@+id/bLogIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:paddingBottom="@dimen/button_curved_transparent_padding_vertical"
            android:paddingTop="@dimen/button_curved_transparent_padding_vertical"
            android:text="@string/logIn"
            android:textColor="@color/colorButtonTransparentText"
            android:textSize="@dimen/button_curved_transparent_text_size" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <app.media.opp.partytonight.presentation.app.view.TextViewSignHint
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:gravity="center"
            android:text="Don't have an account yet?"
            android:textColor="@color/colorTextSignIn" />

        <app.media.opp.partytonight.presentation.app.view.ButtonTransparent
            android:id="@+id/bSignUp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:text="@string/signUp"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>
