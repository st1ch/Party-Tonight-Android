<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_promoter_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAnimationGradientBase"
    android:orientation="vertical"
    android:paddingLeft="36dp"
    android:paddingRight="36dp"
    tools:context="app.media.opp.partytonight.presentation.activities.PromoterSignUpActivity">

    <app.media.opp.partytonight.presentation.app.view.TextViewHeader2
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="18dp"
        android:text="Promoter"
        android:textSize="36dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <app.media.opp.partytonight.presentation.app.view.EditTextCurvedTranslucent
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:hint="@string/name"
            android:textCursorDrawable="@null" />

        <app.media.opp.partytonight.presentation.app.view.EditTextCurvedTranslucent
            android:id="@+id/etPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:hint="@string/phoneNumber"
            android:textCursorDrawable="@null" />

        <app.media.opp.partytonight.presentation.app.view.EditTextCurvedTranslucent
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:hint="@string/eMail"
            android:textCursorDrawable="@null" />

        <app.media.opp.partytonight.presentation.app.view.EditTextCurvedTranslucent
            android:id="@+id/etBillingInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:hint="@string/billingInfo"
            android:textCursorDrawable="@null" />

        <app.media.opp.partytonight.presentation.app.view.EditTextCurvedTranslucent
            android:id="@+id/etEmergencyContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:hint="@string/emergencyContact"
            android:textCursorDrawable="@null" />

        <app.media.opp.partytonight.presentation.app.view.EditTextCurvedTranslucent
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:hint="@string/password"
            android:textCursorDrawable="@null" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <app.media.opp.partytonight.presentation.app.view.ButtonCurvedTranslucent
        android:id="@+id/bSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/button_curved_transparent_padding_vertical"
        android:paddingTop="@dimen/button_curved_transparent_padding_vertical"
        android:text="@string/signUp"
        android:textColor="@color/colorButtonTransparentText"
        android:textSize="@dimen/button_curved_transparent_text_size" />

    <LinearLayout
        android:id="@+id/signInBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <app.media.opp.partytonight.presentation.app.view.TextViewSignHint
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:gravity="center"
            android:text="Already have an account?"
            android:textColor="@color/colorTextSignIn" />

        <app.media.opp.partytonight.presentation.app.view.ButtonTransparent
            android:id="@+id/bSignIn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:text="@string/signIn"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>
