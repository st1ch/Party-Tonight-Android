<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAnimationGradientBase">

    <RelativeLayout
        android:id="@+id/activity_launch_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/anim_transition_color"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        tools:context="app.media.opp.partytonight.presentation.activities.LaunchScreenActivity">

        <app.media.opp.partytonight.presentation.app.view.TextViewTitle
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_app_title_height"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/textview_app_title_margin_top"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/colorTextViewTitle"
            android:textSize="@dimen/textview_app_title_text_size" />

        <TextView
            android:id="@+id/tvMadeBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="@dimen/textview_made_by_padding_bottom"
            android:text="@string/textview_made_by"
            android:textColor="@color/colorTextViewMadeBy" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/tvMadeBy"
            android:layout_marginBottom="22dp">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="12" />

            <app.media.opp.partytonight.presentation.app.view.ButtonCurvedTransparent
                android:id="@+id/bGetStarted"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingBottom="@dimen/button_curved_transparent_padding_vertical"
                android:paddingTop="@dimen/button_curved_transparent_padding_vertical"
                android:text="@string/getStarted"
                android:textColor="@color/colorButtonTransparentText"
                android:textSize="@dimen/button_curved_transparent_text_size" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="12" />

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>