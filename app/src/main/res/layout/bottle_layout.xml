<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/bottle_section_margin_vertical"
    android:layout_marginTop="@dimen/bottle_section_margin_vertical"
    android:orientation="vertical">

    <app.media.opp.partytonight.presentation.app.view.EditTextCurvedTranslucent
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:hint="Bottle Type"
        android:inputType="text"
        android:textSize="@dimen/edittext_curved_text_size" />

    <app.media.opp.partytonight.presentation.app.view.EditTextCurvedTranslucent
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:hint="Bottle price"
        android:inputType="numberDecimal"
        android:textSize="@dimen/edittext_curved_text_size" />

    <app.media.opp.partytonight.presentation.app.view.EditTextCurvedTranslucent
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:hint="Quantity"
        android:inputType="number"
        android:textSize="@dimen/edittext_curved_text_size" />
</LinearLayout>