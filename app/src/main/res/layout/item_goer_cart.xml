<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/colorButtonGraySemiTransparent">

    <app.media.opp.partytonight.presentation.app.view.EventDetailsItem
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:padding="8dp"
        android:paddingLeft="0dp"
        android:paddingStart="0dp"
        app:textSize="18sp" />

    <app.media.opp.partytonight.presentation.app.view.DividerThin
        android:id="@+id/vDivider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tvContent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/tvContent" />
</RelativeLayout>


