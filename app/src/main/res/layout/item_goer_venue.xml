<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="162dp"
    android:orientation="vertical"
    android:padding="4dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivThumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_promoter_event"
        app:riv_corner_radius="6dp"
        app:riv_oval="false" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_goer_item_venue"
        android:padding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <app.media.opp.partytonight.presentation.app.view.TextViewAgudaBold
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:maxLines="1"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:scrollHorizontally="true"
                android:text="Event title"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <app.media.opp.partytonight.presentation.app.view.TextViewAguda
                android:id="@+id/tvTime"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingRight="12dp"
                android:paddingTop="8dp"
                android:text="10:00 PM 25.07.16"
                android:textColor="#ffffff"
                android:textSize="16sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:ellipsize="end"
            android:maxLines="5"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. "
            android:textColor="@color/common_google_signin_btn_text_dark"
            android:visibility="gone" />


        <app.media.opp.partytonight.presentation.app.view.ButtonAguda
            android:id="@+id/bManage"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:background="@null"
            android:text="@string/goer_venue_show_details"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <app.media.opp.partytonight.presentation.app.view.Divider
            android:id="@+id/vDivider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/bManage" />

    </RelativeLayout>

</FrameLayout>