<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.media.opp.partytonight">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name=".presentation.PartyTonightApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.activities.LaunchScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.activities.WelcomeScreenActivity" />
        <activity android:name=".presentation.activities.PromoterSignInActivity" />
        <activity android:name=".presentation.activities.PromoterSignUpActivity" />
        <activity android:name=".presentation.activities.MainActivity" />

    </application>

</manifest>